<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <!-- Login progress -->

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175.5dp"
        android:layout_height="79.5dp"
        android:layout_marginTop="102.5dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/login_img_logo" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="39.5dp"
        android:background="@drawable/sq_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:lineSpacingExtra="22.3sp"
            android:text="아이디"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="#422814"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:background="@null"
            android:fontFamily="@font/nanumsquarer"
            android:hint="아이디를 입력해주세요."
            android:lineSpacingExtra="22.3sp"
            android:textColorHint="#dfdfdf"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/sq_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.5dp"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="22.3sp"
            android:text="비밀번호"
            android:textColor="#422814"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/nanumsquarer"
            android:background="@null"
            android:hint="비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:lineSpacingExtra="22.3sp"
            android:textColorHint="#dfdfdf"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="#422814 "
        android:text="로그인하기"
        android:fontFamily="@font/nanumsquareb"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="22.3sp"
            android:text="아직 꿀주차 회원이 아니신가요?"
            android:textColor="#422814"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/st_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:autoLink="none"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="22.3sp"
            android:onClick="ck_sign"
            android:text="회원가입"
            android:textColor="#f7c733"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="22.3sp"
            android:fontFamily="@font/nanumsquareb"
            android:text="아이디·비밀번호를 잊으셨나요?"
            android:textColor="#422814"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/find_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:fontFamily="@font/nanumsquareb"
            android:text="아이디·비밀번호 찾기"
            android:textColor="#f7c733"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_btn_box"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            app:srcCompat="@drawable/login_img_kakao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/nanumsquareb"
            android:lineSpacingExtra="22.3sp"
            android:text="카카오계정으로 시작하기"
            android:textColor="#282100"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>