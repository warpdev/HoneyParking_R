<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".agree_page">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/app_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:background="@drawable/sq_line"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="12.5dp"
                android:background="@drawable/custom_ck_box"
                android:button="@null"
                android:onClick="all_ck"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:lineSpacingExtra="21.8sp"
                android:fontFamily="@font/nanumsquareb"
                android:text="전체동의 (선택 약관 포함)"
                android:textColor="#422814"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/sq_line"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15.5dp"
                android:background="@drawable/custom_ck_box"
                android:button="@null" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:textSize="14sp"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#422814"
                android:text="서비스 이용약관 동의 (필수)"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bababa"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquareb"
                android:layout_marginLeft="7dp"
                android:text="상세보기" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/sq_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15.5dp"
                android:background="@drawable/custom_ck_box"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:fontFamily="@font/nanumsquareb"
                android:text="개인 정보 취급방침 동의 (필수)"
                android:textColor="#422814"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="상세보기"
                android:textColor="#bababa"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/sq_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15.5dp"
                android:background="@drawable/custom_ck_box"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:text="위치 기반 서비스 이용약관 동의 (필수)"
                android:textColor="#422814"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="상세보기"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#bababa"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/sq_line"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15.5dp"
                android:background="@drawable/custom_ck_box"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.5dp"
                android:text="마케팅 정보 수신 동의 (선택)"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#422814"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="상세보기"
                android:textColor="#bababa"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <Button
        android:id="@+id/Big_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/custom_btn"
        android:enabled="false"
        android:lineSpacingExtra="15sp"
        android:fontFamily="@font/nanumsquareb"
        android:text="동의하고 계속 진행합니다."
        android:textColor="#ffffff"
        android:textSize="20.8sp"
        android:onClick="ck_next"/>
</LinearLayout>
</LinearLayout>