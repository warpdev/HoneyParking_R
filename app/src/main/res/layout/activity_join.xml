<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageButtonback"
                android:layout_width="9.5dp"
                android:layout_height="17.5dp"
                app:srcCompat="@drawable/join_icn_back_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:lineSpacingExtra="18.8sp"
                android:text="회원가입"
                android:fontFamily="@font/nanumsquareb"
                android:textColor="#422814"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:background="@drawable/sq_line"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:fontFamily="@font/nanumsquareb"
                    android:lineSpacingExtra="21.8sp"
                    android:text="이름"
                    android:layout_marginLeft="17dp"
                    />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="68dp"
                    android:background="@null"
                    android:fontFamily="@font/nanumsquarer"
                    android:hint="이름 입력"
                    android:lineSpacingExtra="22.3sp"
                    android:textColorHint="#d9d9d9"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/sq_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareb"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:lineSpacingExtra="21.8sp"
                    android:layout_marginLeft="17.5dp"
                    android:text="휴대폰번호"
                    />

                <EditText
                    android:id="@+id/editText_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarer"
                    android:background="@null"
                    android:hint="- 없이 번호만 입력"
                    android:inputType="phone"
                    android:layout_marginLeft="28.5dp"
                    android:lineSpacingExtra="21.8sp"
                    android:textColorHint="#d9d9d9"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <Button
                        android:id="@+id/send_msg"
                        android:layout_width="86.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_btn"
                        android:textSize="12sp"
                        android:fontFamily="@font/nanumsquareb"
                        android:textColor="#545454"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="23.8sp"
                        android:text="인증번호 받기"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/sq_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:fontFamily="@font/nanumsquareb"
                    android:lineSpacingExtra="21.8sp"
                    android:text="인증번호"
                    android:layout_marginLeft="18dp"
                    />

                <EditText
                    android:id="@+id/editText_cknum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="인증번호를 입력"
                    android:inputType="phone"
                    android:fontFamily="@font/nanumsquarer"
                    android:layout_marginLeft="41dp"
                    android:lineSpacingExtra="21.8sp"
                    android:textColorHint="#d9d9d9"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">

                    <Button
                        android:id="@+id/btn_cknum"
                        android:layout_width="86.5dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/custom_btn"
                        android:fontFamily="@font/nanumsquareb"
                        android:textSize="12sp"
                        android:textColor="#545454"
                        android:letterSpacing="-0.05"
                        android:lineSpacingExtra="23.8sp"
                        android:enabled="false"
                        android:text="인증번호 확인"/>
                </LinearLayout>

            </LinearLayout>

            <!--여기에 제한시간-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="24.5dp"
                android:background="@drawable/sq_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:lineSpacingExtra="21.8sp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="아이디"
                    android:layout_marginLeft="17dp"
                    />

                <EditText
                    android:id="@+id/editText_joinid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquarer"
                    android:background="@null"
                    android:hint="아이디 입력"
                    android:layout_marginLeft="56dp"
                    android:lineSpacingExtra="21.8sp"
                    android:textColorHint="#d9d9d9"
                    android:maxLength="18"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/sq_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:fontFamily="@font/nanumsquareb"
                    android:lineSpacingExtra="21.8sp"
                    android:text="비밀번호"
                    android:layout_marginLeft="18dp"
                    />

                <EditText
                    android:id="@+id/editText_joinpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="특수문자 포함 8자 이상"
                    android:fontFamily="@font/nanumsquarer"
                    android:layout_marginLeft="41dp"
                    android:lineSpacingExtra="21.8sp"
                    android:textColorHint="#d9d9d9"
                    android:inputType="textPassword"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="-4dp"
                android:background="@drawable/sq_line"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#422814"
                    android:fontFamily="@font/nanumsquareb"
                    android:lineSpacingExtra="21.8sp"
                    android:text="비밀번호확인"
                    android:layout_marginLeft="18dp"
                    />

                <EditText
                    android:id="@+id/editText_joinpwck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="비밀번호 한번 더 입력"
                    android:layout_marginLeft="17dp"
                    android:lineSpacingExtra="21.8sp"
                    android:fontFamily="@font/nanumsquarer"
                    android:textColorHint="#d9d9d9"
                    android:textSize="14sp"
                    android:inputType="textPassword"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="57dp">

        <Button
            android:id="@+id/Big_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/custom_btn"
            android:enabled="false"
            android:lineSpacingExtra="15sp"
            android:onClick="submit_join"
            android:text="가입완료"
            android:fontFamily="@font/nanumsquareb"
            android:textColor="#ffffff"
            android:textSize="20.8sp" />
        <!--android:enabled="false"-->
        <!--android:onClick="ck_next"-->
    </LinearLayout>
</android.support.constraint.ConstraintLayout>