<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".parking_detail">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/app_toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/btn_order_pay"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/sq_line_bot">

            <TextView
                android:layout_width="87dp"
                android:layout_height="75dp"
                android:layout_marginLeft="35.5dp"
                android:background="@drawable/img_parking_info"
                android:gravity="center"
                android:text="총 200구역"
                android:textColor="#422814"
                android:textSize="14sp" />

            <TextView
                android:layout_width="87dp"
                android:layout_height="75dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/img_parking_info"
                android:gravity="center"
                android:text="2꿀/시간"
                android:textColor="#422814"
                android:textSize="14sp" />

            <TextView
                android:layout_width="87dp"
                android:layout_marginLeft="14dp"
                android:layout_height="75dp"
                android:background="@drawable/img_parking_info"
                android:gravity="center"
                android:textColor="#422814"
                android:textSize="14sp"
                android:text="지상
주차장" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="146dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5dp"
                android:layout_marginTop="17.5dp"
                android:lineSpacingExtra="21.8sp"
                android:text="운영시간"
                android:textColor="#422814"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/preorder_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17.5dp"
                android:layout_marginRight="15dp"
                android:gravity="end"
                android:text="9:00 ~ 22:00"
                android:textColor="#606060"
                android:textSize="13.9sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_order_pay"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_btn"
        android:fontFamily="@font/nanumsquareb"
        android:lineSpacingExtra="15.8sp"
        android:text="네비게이션"
        android:textColor="#422814"
        android:textSize="20sp" />

</RelativeLayout>